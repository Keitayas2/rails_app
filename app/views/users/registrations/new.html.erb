<div class="container">
  <h2>新規登録</h2>

    <div class="rounded-image">
      <%= image_tag "instagram-vector-social-media-icon-7-june-2021-bangkok-thailand_53876-136728.avif", alt: "Example Image" , size: "200px" , style: "border-radius: 50%;" %>
    </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }, autocomplete: "off") do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :名前 %>
      <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control", required: true, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワードの確認 %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

<style>
  h2 {
    text-align: center;
  }
  .render{
    text-align: center;
    dislpay: flex;
    flex-direction: row;
  }
  .rounded-image {
    text-align: center;
    margin-bottom: 20px;
    border-radius: 50%;
  }
</style>